@{
    ViewBag.Title = "Home Page";
}

<style>
    h1 {
        text-align: center;
        color: #006633;
        border: 3px dashed #006633;
        border-bottom-right-radius: 30px;
        border-top-left-radius: 30px;
        width: 400px;
        margin-left: auto;
        margin-right: auto;
        padding-top: 10px;
        padding-bottom: 10px;
        text-shadow: 5px 5px 15px #FFCC33;
    }

    h3 {
        color: #006633;
        text-shadow: 5px 5px 15px #FFCC33;
        text-align: center;
    }

    h1, h3 {
        font-weight: bold;
    }
</style>

<br />

<h1>Welcome to Mason!</h1>

<br />

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="img-responsive center-block" src="~/Images/Mason2.jpg" alt="Gmu Picture" style="width:650px; height:350px;">
        </div>

        <div class="item">
            <img class="img-responsive center-block" src="~/Images/Mason7.jpg" alt="Gmu Picture" style="width:650px; height:350px;">
        </div>

        <div class="item">
            <img class="img-responsive center-block" src="~/Images/Mason6.jpg" alt="Gmu Picture" style="width:650px; height:350px;">
        </div>

        <div class="item">
            <img class="img-responsive center-block" src="~/Images/Mason1.jpg" alt="Gmu Picture" style="width:650px; height:350px;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h3>Mason Programs</h3>
        <p>
            George Mason University provides more than 200 undergraduate and graduate degrees
            including minors and certificate programs to meet your personal goals.
            Click the link to see more Mason Programs of study.
        </p>
        <p><a class="btn btn-default" href="~/Home/ProgramStudy">More information &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h3>Application Deadlines</h3>
        <p>
            Don’t miss out! The deadline to apply to Mason. Be sure to send in your application
            by 11:59 pm EST on the date is as shown in the Important Deadlines.
            Click the link to see the important deadlines.
        </p>
        <p><a class="btn btn-default" href="~/Home/Deadlines">More information &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h3>Admission Requirements</h3>
        <p>
            Admission requirements vary by program, but we provide some general admission requirements.
            Please read the admission requirements carefully. Click the link to see the general admission
            requirements.
        </p>
        <p><a class="btn btn-default" href="~/Home/AdmissionRequirement">More information &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h3>After Apply to Mason</h3>
        <p>
            Congratulations on your admission to George Mason University! To make it official, there are 
            important initial next steps that all admitted students need to complete to confirm enrollment. 
            Click the link to see the New Student Checklist.
        </p>
        <p><a class="btn btn-default" href="~/Home/Checklist">More information &raquo;</a></p>
    </div>

</div>